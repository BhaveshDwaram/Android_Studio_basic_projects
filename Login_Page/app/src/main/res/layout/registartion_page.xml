<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >

    <TextView
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:background="#800895"
        android:gravity="center"
        android:padding="10dp"
        android:text="Register User"
        android:textColor="#FBF6F6"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/u1"
        android:layout_below="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter First name"
        android:inputType="text"
        android:text="" />
    <EditText
        android:id="@+id/u2"
        android:layout_below="@+id/u1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter USN"
        android:inputType="text"
        android:text="" />
    <EditText
        android:id="@+id/u3"
        android:layout_below="@+id/u2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="select branch"
        android:inputType="text"
        android:text="" />

    <Spinner
        android:id="@+id/s1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@id/u2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="4dp" />

    <EditText
        android:id="@+id/u4"
        android:layout_below="@+id/u3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter new username"
        android:inputType="text"
        android:text="" />
    <EditText
        android:id="@+id/u5"
        android:layout_below="@+id/u4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:text="" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u5"
     android:layout_alignParentLeft="true"
        android:text="Click Here to open camera"
        android:textSize="12dp" />
    <Button
        android:id="@+id/contacts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/u5"
        android:text="Click Here to acess contacts"
        android:textSize="12dp" />
    <Button
        android:id="@+id/dail_pad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contacts"
        android:text="Click here to open dail pad"
        android:textSize="12dp" />

    <Button
        android:id="@+id/acess_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Already a User ? Login Here"
        android:textSize="12dp" />

</RelativeLayout>
